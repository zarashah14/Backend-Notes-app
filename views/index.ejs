<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">


      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
           name="title"
            class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800"
            type="text"
            placeholder="Title goes here"
          />
          <textarea
            name="details"
            class="block w-full rounded-md outline-none px-5 py-2 resize-none mt-2 bg-zinc-800"
            placeholder="write your task detail"
          ></textarea>
          <input
            class="block px-5 py-2 bg-blue-600 px-5 py-2 mt-2"
            type="submit"
            value="create Task"
          />
        </form>
      </div>
           
      <div class="task p-10 text-white flex flex-wrap gap-4">
        <% if(files.length > 0 ){ %>
                 
            <% files.forEach(function(val){ %>
                <div class="task rounded-md  min-w-72 px-3 py-4 bg-zinc-800">
                    <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                    <a  class="text-blue-600 inline-block mt-3" href="/file/<%= val %>">Read More...</a>
                   </div>
          <% }) %>

      <%  } else{ %> 
                     <h3 class="text-zinc-600">No Task Yet.</h3>
          <% } %>
         
      </div>

    </div>

  </body>
</html>
